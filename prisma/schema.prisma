// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bookstore.db"
}

model Author{
  id       Int @id @default(autoincrement())
  name     String
  created  DateTime @default(now())
  updated  DateTime @default(now())

  books     Book[]
}

model Bookstore{
  id       Int @id @default(autoincrement())
  name     String
  loaction String
  created  DateTime @default(now())
  updated  DateTime @default(now())

  book      Book[]
}

model Book{
  id          Int @id   @default(autoincrement())
  bookstoreID Int?
  authID      Int?
  title       String
  price       String
  image       String
  created     DateTime   @default(now())
  updated     DateTime   @default(now())

  authors      Author? @relation(fields: [authID], references: [id])
  bookstores   Bookstore? @relation(fields: [bookstoreID], references: [id])
}

